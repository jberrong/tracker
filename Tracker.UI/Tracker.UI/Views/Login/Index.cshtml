@{
    ViewBag.Title = "Home Page";
}
<div id="fielderror" class="alert alert-danger hidden" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    Please ensure fields Username and Password are filled out.
</div>
<div id="loginerror" class="alert alert-danger hidden" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    Invalid credentials.
</div>
<div id="success" class="alert alert-success hidden" role="alert">
    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    Successfully validated. You will be logged in shortly.
</div>
<div class="jumbotron">
    <div class="">
        <h2>Login</h2>
        <div class="row"><div class="col-sm-1">Username: <input type="text" ng-model="username" /></div></div>
        <div class="row"><div class="col-sm-1">Password: <input type="password" ng-model="password" /></div></div>
        <div class="row"><div class="col-sm-1"><button ng-click="validate()" class="btn btn-primary" >Log In</button></div></div>
    </div>
</div>